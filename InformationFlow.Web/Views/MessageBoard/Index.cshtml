@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>留言板</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="stylesheet" href="~/lib//layui/css/layui.css" media="all">
    <link rel="stylesheet" href="~/Content/admin.css">
    <link rel="stylesheet" href="~/Content/login.css">
    <script type="text/javascript" src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/lib/layui/layui.js" charset="utf-8"></script>
</head>
<body>
    <div class="layadmin-user-display-show" id="LAY-user-login" style="display: none;">
        <div class="layadmin-user-login-main">
            <div class="layadmin-user-login-header">
                <h2>留言板</h2>
            </div>
            <div class="layadmin-user-login-box layadmin-user-login-body layui-form">
                <div class="layui-form-item">
                    <label class="layadmin-user-login-icon layui-icon layui-icon-username" for="LAY-user-login-nickname"></label>
                    <input type="text" name="nickname" id="LAY-user-login-nickname" lay-verify="required|nickname" placeholder="姓名" class="layui-input" maxlength="20">
                </div>
                <div class="layui-form-item">
                    <label class="layadmin-user-login-icon layui-icon layui-icon-cellphone" for="LAY-user-login-cellphone"></label>
                    <input type="text" name="cellphone" id="LAY-user-login-cellphone" lay-verify="required|phone" placeholder="手机" class="layui-input" maxlength="11">
                </div>
                @*<div class="layui-form-item">
                    <div class="layui-row">
                        <div class="layui-col-xs7">
                            <label class="layadmin-user-login-icon layui-icon layui-icon-vercode" for="LAY-user-login-vercode"></label>
                            <input type="text" name="vercode" id="LAY-user-login-vercode" lay-verify="required|vercode" placeholder="验证码" class="layui-input" maxlength="6">
                        </div>
                        <div class="layui-col-xs5">
                            <div style="margin-left: 10px;">
                                <button type="button" class="layui-btn layui-btn-primary layui-btn-fluid" id="LAY-user-getsmscode">获取验证码</button>
                            </div>
                        </div>
                    </div>
                </div>*@
                <div class="layui-form-item">
                    <div class="layui-col-md12">
                        <textarea name="messageInfo" placeholder="留言给我们，请输入" class="layui-textarea" maxlength="120" id=""></textarea>
                    </div>
                </div>
                <div class="layui-form-item">
                    <button class="layui-btn layui-btn-fluid" lay-submit lay-filter="LAY-user-reg-submit" style="background-color: #dc233f;">留 言</button>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        layui.use('form', function () {
            var form = layui.form;
            //自定义验证规则
            form.verify({
                //vercode: [/(.+){4,6}$/, '密码必须4到6位']
            });
            //监听提交
            form.on('submit(LAY-user-reg-submit)', function (data) {
                //alert(document.referrer);
                var actionUrl = '@Url.Action("MessageBoardInfo")';
                $.post(actionUrl, data.field, function (result) {
                    if (result.Success != null && result.Success) {
                        layer.alert("留言成功");
                        return;
                    }
                });
            });
        });
    </script>
</body>
</html>
